<Window x:Class="Nyse.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyse.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1008" WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <DataTemplate DataType="{x:Type local:StockViewViewModel}">
            <local:StockViewControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:SidebarViewModel}">
            <local:SidebarControl/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Column Definitions -->
        <Grid.ColumnDefinitions>
            <!-- Sidebar Stocks List -->
            <ColumnDefinition Width="200px"/>

            <!-- Main Content -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
<!--<local:SidebarControl />-->
        <!-- Side bar -->
        <Grid Grid.Column="0">
            <ContentControl Content="{Binding SidebarViewModel}"/>
        </Grid>

        <!-- Stock Viewer -->
        <Grid Grid.Column="1">
            <ContentControl Content="{Binding CurrentViewModel}"
                            />
        </Grid>

    </Grid>
</Window>
  