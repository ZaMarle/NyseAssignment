<Application x:Class="Nyse.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nyse.Client">
    <Application.Resources>
        <FontFamily x:Key="FontAwesome">/Nyse.Client;component/Fonts/FontAwesome.otf#Font Awesome 5 Free Solid</FontFamily>
        <!--<FontFamily x:Key="FontAwesome">/Fonts/fa-regular-400.ttf#FontAwesome</FontFamily>-->

        <Style TargetType="Button" x:Key="YellowButton">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="Yellow"/>
        </Style>
        
    </Application.Resources>
</Application>
